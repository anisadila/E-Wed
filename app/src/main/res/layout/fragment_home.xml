<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adila.e_wed.Fragment.HomeFragment"
    android:orientation="vertical"
    android:padding="@dimen/spacer_10">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/kategori_wardrobe"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_wardrobe"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="wardobe"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/kategori_makeup"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_makeup"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="makeup"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/kategori_catering"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_catering"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="catering"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/kategori_decoration"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_decoration"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="decoration"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/categori_entertainment"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_entertainment"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="entertainment"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/kategori_documentation"
            style="@style/menu_kategori_card">
            <LinearLayout
                style="@style/menu_kategori_linearlayout">
                <ImageView
                    style="@style/menu_kategori_image"
                    android:src="@drawable/kat_documentation"/>
                <TextView
                    style="@style/menu_kategori_text"
                    android:text="documentation"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
